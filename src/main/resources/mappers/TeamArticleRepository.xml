<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.repository.TeamArticleRepository">

    <!-- 팀 목록 조회 -->
    <select id="getForPrintTeam" resultType="org.example.vo.TeamArticle">
        SELECT *
        FROM team
        WHERE 1=1
        <if test="teamName != null and teamName != ''">
            AND teamName LIKE CONCAT('%', #{teamName}, '%')
        </if>
        <if test="teamRank != null and teamRank != ''">
            AND teamRank = #{teamRank}
        </if>
        <if test="teamLeader != null and teamLeader != ''">
            AND teamLeader = #{teamLeader}
        </if>
        ORDER BY id DESC
    </select>

</mapper>
